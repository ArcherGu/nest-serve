{
  "name": "nest-serve",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/nest-serve/test/jest-e2e.json",
    "build:all": "nest build account && nest build files && nest build infos",
    "pm2:all": "pm2 start dist/apps/account/main.js && pm2 start dist/apps/files/main.js && pm2 start dist/apps/infos/main.js && pm2 monit"
  },
  "dependencies": {
    "@nestjs/common": "^7.6.5",
    "@nestjs/config": "^0.6.1",
    "@nestjs/core": "^7.6.5",
    "@nestjs/jwt": "^7.2.0",
    "@nestjs/passport": "^7.1.5",
    "@nestjs/platform-express": "^7.6.5",
    "@nestjs/swagger": "^4.7.10",
    "@nestjs/typeorm": "^7.1.5",
    "ali-oss": "^6.13.1",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.13.0",
    "dayjs": "^1.10.3",
    "filesize": "^6.1.0",
    "form-data": "^3.0.0",
    "helmet": "^4.3.1",
    "ip": "^1.1.5",
    "js-sha512": "^0.8.0",
    "lodash": "^4.17.20",
    "log4js": "^6.3.0",
    "mysql": "^2.18.1",
    "node-fetch": "^2.6.1",
    "nuid": "^1.1.4",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3",
    "swagger-ui-express": "4.1.6",
    "typeorm": "^0.2.30"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.5.4",
    "@nestjs/schematics": "^7.2.6",
    "@nestjs/testing": "^7.6.5",
    "@types/express": "^4.17.11",
    "@types/ip": "^1.1.0",
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.167",
    "@types/node": "^14.14.20",
    "@types/node-fetch": "^2.5.7",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "7.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.14",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "@app/data-tool/(.*)": "<rootDir>/libs/data-tool/src/$1",
      "@app/data-tool": "<rootDir>/libs/data-tool/src",
      "@app/service-tool/(.*)": "<rootDir>/libs/service-tool/src/$1",
      "@app/service-tool": "<rootDir>/libs/service-tool/src",
      "@app/decorator/(.*)": "<rootDir>/libs/decorator/src/$1",
      "@app/decorator": "<rootDir>/libs/decorator/src",
      "@app/dto-tool/(.*)": "<rootDir>/libs/dto-tool/src/$1",
      "@app/dto-tool": "<rootDir>/libs/dto-tool/src",
      "@app/entity-tool/(.*)": "<rootDir>/libs/entity-tool/src/$1",
      "@app/entity-tool": "<rootDir>/libs/entity-tool/src",
      "@app/logger/(.*)": "<rootDir>/libs/logger/src/$1",
      "@app/logger": "<rootDir>/libs/logger/src",
      "@app/middleware/(.*)": "<rootDir>/libs/middleware/src/$1",
      "@app/middleware": "<rootDir>/libs/middleware/src",
      "@app/bootstrap/(.*)": "<rootDir>/libs/bootstrap/src/$1",
      "@app/bootstrap": "<rootDir>/libs/bootstrap/src",
      "@app/http/(.*)": "<rootDir>/libs/http/src/$1",
      "@app/http": "<rootDir>/libs/http/src"
    }
  }
}
