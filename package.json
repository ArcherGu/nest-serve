{
  "name": "nest-serve",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/nest-serve/test/jest-e2e.json",
    "build:all": "nest build account && nest build infos && nest build admin",
    "serve": "pm2 start",
    "serve:pd": "pm2 start --env production"
  },
  "dependencies": {
    "@alicloud/dysmsapi20170525": "^2.0.1",
    "@alicloud/openapi-client": "^0.3.3",
    "@nestjs/common": "^8.0.5",
    "@nestjs/config": "^1.0.1",
    "@nestjs/core": "^8.0.5",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/microservices": "^8.0.5",
    "@nestjs/passport": "^8.0.1",
    "@nestjs/platform-express": "^8.0.5",
    "@nestjs/swagger": "^5.0.9",
    "@nestjs/typeorm": "^8.0.1",
    "@types/lodash": "^4.14.171",
    "@types/request-ip": "^0.0.37",
    "cache-manager": "^3.4.4",
    "cache-manager-redis-store": "^2.0.0",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "helmet": "^4.6.0",
    "js-sha512": "^0.8.0",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "log4js": "^6.3.0",
    "moment": "^2.29.1",
    "multer": "^1.4.2",
    "mysql": "^2.18.1",
    "nuid": "^1.1.6",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "request-ip": "^2.1.3",
    "rimraf": "^3.0.2",
    "rxjs": "^7.3.0",
    "swagger-ui-express": "^4.1.6",
    "typeorm": "^0.2.36"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.1.0",
    "@nestjs/schematics": "^8.0.2",
    "@nestjs/testing": "^8.0.5",
    "@types/cache-manager": "^3.4.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/js-yaml": "^4.0.2",
    "@types/multer": "^1.4.7",
    "@types/node": "^16.4.8",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "27.0.6",
    "prettier": "^2.3.2",
    "supertest": "^6.1.4",
    "ts-jest": "^27.0.4",
    "ts-loader": "^9.2.4",
    "ts-node": "^10.1.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "@app/decorator/(.*)": "<rootDir>/libs/decorator/src/$1",
      "@app/decorator": "<rootDir>/libs/decorator/src",
      "@app/public-decorator/(.*)": "<rootDir>/libs/public-decorator/src/$1",
      "@app/public-decorator": "<rootDir>/libs/public-decorator/src",
      "@app/public-tool/(.*)": "<rootDir>/libs/public-tool/src/$1",
      "@app/public-tool": "<rootDir>/libs/public-tool/src",
      "@app/logger/(.*)": "<rootDir>/libs/logger/src/$1",
      "@app/logger": "<rootDir>/libs/logger/src",
      "@app/public-module/(.*)": "<rootDir>/libs/public-module/src/$1",
      "@app/public-module": "<rootDir>/libs/public-module/src",
      "@app/public-class/(.*)": "<rootDir>/libs/public-class/src/$1",
      "@app/public-class": "<rootDir>/libs/public-class/src"
    }
  }
}
